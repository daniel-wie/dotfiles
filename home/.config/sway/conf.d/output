# Background
output * bg $HOME/.dotfiles/img/bg.jpg fill

# You can get the names of your outputs by running: swaymsg -t get_outputs
set $laptop eDP-1
set $msi "Microstep MSI MD342CQP PC5H275200620"
set $left_14 "Dell Inc. DELL U2412M Y1H5T1B10H2L"

# Homeoffice
output $laptop resolution 1920x1080 position 0,0
output $msi mode 3440x1440@120Hz position -3440,0

# AIT 
output DP-3 resolution 1920x1080 position 1920,0
output DP-4 resolution 1920x1080 position 3840,0

output $left_14 resolution 1920x1200 position 1920,0

# Clamshell mode (https://github.com/swaywm/sway/wiki#clamshell-mode)
bindswitch --reload --locked lid:on output $laptop disable
bindswitch --reload --locked lid:off output $laptop enable

