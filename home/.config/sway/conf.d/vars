include /etc/sway/config-vars.d/*

set $mod Mod4 
set $left h
set $down j
set $up k
set $right l
set $term uwsm app -- kitty
set $filemanager uwsm app -- dolphin
set $menu uwsm app -- $(wofi --show drun --define=drun-print_desktop_file=true)
set $clipboard uwsm app -- $(cliphist list | wofi --show dmenu | cliphist decode | wl-copy)
